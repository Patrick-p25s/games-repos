
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for the existence of the role field in the user's document and if it's 'admin'
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isCreatingOwnDocument(userId) {
      // Ensure the user ID in the document being created matches the authenticated user's ID
      return isOwner(userId) && request.resource.data.id == userId;
    }
    
    // Allow a user to update only their own 'name', 'avatar', and 'stats'.
    function isUpdatingOwnSafeFields(userId) {
      let isOwner = isOwner(userId);
      let incomingData = request.resource.data;
      let existingData = resource.data;

      // List of fields the user is allowed to change.
      let allowedFields = ['name', 'avatar', 'stats'];
      // The keys in the incoming data.
      let incomingKeys = incomingData.keys();
      
      // Ensure the user is only trying to change the fields they are allowed to.
      let changesAllowed = incomingKeys.hasAll(allowedFields) && incomingKeys.size() <= allowedFields.size();
      
      // Ensure non-editable fields remain unchanged.
      let roleUnchanged = incomingData.role == existingData.role;
      let emailUnchanged = incomingData.email == existingData.email;
      let idUnchanged = incomingData.id == existingData.id;

      return isOwner && changesAllowed && roleUnchanged && emailUnchanged && idUnchanged;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isCreatingOwnDocument(userId);
      allow update: if isUpdatingOwnSafeFields(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /scores/{scoreId} {
        allow read, list, write: if isOwner(userId) || isAdmin();
      }

      match /quiz_history/{userQuizHistoryId} {
        allow read, list, write: if isOwner(userId) || isAdmin();
      }
    }

    match /games/{gameId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /quiz_questions/{quizQuestionId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, list, update, delete: if isAdmin();
    }

    match /app-stats/{statId} {
      allow get, list: if true;
      allow create, update: if true; // Allows anyone to increment the counter
      allow delete: if false;
    }

    // Allow public read for leaderboards, but only allow authenticated users to write (via transactions).
    match /leaderboards/all {
      allow get: if true;
      allow write: if isSignedIn(); 
    }
  }
}
