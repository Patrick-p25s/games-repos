
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@nextgen.games';
    }

    // On create, ensure the user ID in the document being created matches the authenticated user's ID
    // and that they are not trying to give themselves a role other than 'user'.
    function isCreatingOwnDocument(userId) {
      let isOwner = isOwner(userId);
      // The role must either not be present or be explicitly 'user'.
      let isNotAssigningRole = !('role' in request.resource.data) || request.resource.data.role == 'user';
      return isOwner && isNotAssigningRole;
    }
    
    // On update, a user can only change their own 'name', 'avatar', and 'stats'.
    // All other fields like 'role' or 'email' must remain unchanged.
    function isUpdatingOwnSafeFields(userId) {
      let isOwner = isOwner(userId);
      let incomingData = request.resource.data;
      let existingData = resource.data;

      // List of fields the user is allowed to change.
      let allowedFields = ['name', 'avatar', 'stats'];
      let incomingKeys = incomingData.keys();
      
      // Ensure all incoming keys are a SUBSET of the allowed fields.
      let changesAllowed = incomingKeys.hasOnly(allowedFields);
      
      // Ensure non-editable fields remain unchanged by comparing them to existing data.
      let roleUnchanged = !('role' in incomingData) || incomingData.role == existingData.role;
      let emailUnchanged = !('email' in incomingData) || incomingData.email == existingData.email;
      let idUnchanged = !('id' in incomingData) || incomingData.id == existingData.id;

      return isOwner && changesAllowed && roleUnchanged && emailUnchanged && idUnchanged;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isCreatingOwnDocument(userId);
      allow update: if isUpdatingOwnSafeFields(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /scores/{scoreId} {
        allow read, list, write: if isOwner(userId) || isAdmin();
      }

      match /quiz_history/{userQuizHistoryId} {
        allow read, list, write: if isOwner(userId) || isAdmin();
      }
    }

    match /games/{gameId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /quiz_questions/{quizQuestionId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, list, update, delete: if isAdmin();
    }

    match /app-stats/{statId} {
      allow get, list: if true;
      allow create, update: if true; // Allows anyone to increment the counter
      allow delete: if false;
    }

    // Allow public read for leaderboards, but only allow authenticated users to write (via transactions).
    match /leaderboards/all {
      allow get: if true;
      allow write: if isSignedIn(); 
    }
  }
}
