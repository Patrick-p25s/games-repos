
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@nextgen.games';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admin can do anything.
      // A user can read their own document.
      allow read: if isOwner(userId) || isAdmin();
      
      // Only admins can list all users.
      allow list: if isAdmin();
      
      // A user can create their own document.
      allow create: if isOwner(userId);

      // Admin can update any user.
      // A user can update their own document IF they are only changing safe fields
      // and not changing their role or email.
      allow update: if isAdmin() || (isOwner(userId)
        && request.resource.data.keys().hasOnly(['name', 'avatar', 'stats', 'inbox', 'id', 'email', 'role'])
        && request.resource.data.email == resource.data.email
        && request.resource.data.role == resource.data.role);

      // Only admins can delete users.
      allow delete: if isAdmin();

      // Subcollections for user
      match /scores/{scoreId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /quiz_history/{userQuizHistoryId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Rules for 'games' and 'quiz_questions'
    match /games/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /quiz_questions/{quizQuestionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Rules for feedback
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, list, update, delete: if isAdmin();
    }

    // Rules for app stats (like view counter)
    match /app-stats/{statId} {
      allow get: if true;
      allow write: if true; // Allows transactional increments from any client
    }

    // Rules for public leaderboards
    match /leaderboards/{leaderboardId} {
      allow read: if true;
      // Writes are handled by secure backend logic (transactions), but we need to allow
      // authenticated users to trigger updates validated by rules.
      allow write: if isSignedIn() || isAdmin();
    }
  }
}
